---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Bellroy</title>
    <link rel="stylesheet" href="/styles/bellroy-component.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <div class="logo">
          <a href="/">Bellroy</a>
        </div>
        <nav class="main-nav">
          <ul>
            <li><a href="/products">Products</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>
    
    <slot />
    
    <footer class="site-footer">
      <div class="container">
        <p>&copy; 2025 Bellroy. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  /* Basic layout styles */
  :root {
    --header-height: 80px;
    --footer-height: 60px;
  }
  
  body {
    font-family: 'Avenir Next', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  /* Header styles */
  .site-header {
    height: var(--header-height);
    border-bottom: 1px solid #e0e0e0;
    display: flex;
    align-items: center;
  }
  
  .site-header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }
  
  .logo a {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1a1a1a;
    text-decoration: none;
  }
  
  .main-nav ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }
  
  .main-nav a {
    color: #333;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
  }
  
  .main-nav a:hover {
    color: #007aff;
  }
  
  /* Main content area */
  main {
    flex: 1;
    padding: 2rem 0;
  }
  
  .header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }
  
  .header p {
    color: #777;
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto;
  }
  
  /* Footer styles */
  .site-footer {
    height: var(--footer-height);
    border-top: 1px solid #e0e0e0;
    display: flex;
    align-items: center;
    color: #777;
    font-size: 0.875rem;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .site-header {
      height: auto;
      padding: 1rem 0;
    }
    
    .site-header .container {
      flex-direction: column;
      gap: 1rem;
    }
    
    .main-nav ul {
      gap: 1rem;
    }
  }
</style>